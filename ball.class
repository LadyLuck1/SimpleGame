public class Ball{

private:
int size;
int speed;
int defense;
int armor;
Attack at;

  public ball(){
    size = 5;
    speed = 5;
    defense = 5;
    armor = 0;
    at = new Attack(this);
  }

  public int getSize(){
    return this.size;
  }

  public int getSpeed(){
    return this.speed;
  }

  public int getDefense(){
    return this.defense;
  }

  public int getArmor(){
    return this.armor;
  }

  public void setArmor(int x){
    this.armor = x;
  }
  public void setSpeed(int x){
    this.speed = x;
  }


  private void setBall(int x){
    this.size = x;
    this.speed = getSpeed();
    this.armor = getArmor();
  }
}
